{
  "name": "glory-to-rome",
  "version": "1.0.0",
  "description": "Web Application for playing Glory To Rome",
  "main": "server.js",
  "engines": {
    "node": "6.2.2"
  },
  "scripts": {
    "test": "karma start",
    "start": "better-npm-run start",
    "build:client": "webpack -p --config webpack.prod.config.js --progress",
    "build": "better-npm-run build",
    "create": "rm -rf node_modules/* && better-npm-run build"
  },
  "betterScripts": {
    "build": {
      "command": "npm run build:client && node --optimize_for_size --max_old_space_size=460 --gc_interval=100 server.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "node server.js",
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "dependencies": {
    "@angular/common": "2.4.2",
    "@angular/compiler": "2.4.2",
    "@angular/core": "2.4.2",
    "@angular/forms": "2.4.2",
    "@angular/http": "2.4.2",
    "@angular/platform-browser": "2.4.2",
    "@angular/platform-browser-dynamic": "2.4.2",
    "@angular/router": "3.4.2",
    "@angularclass/hmr": "^1.0.1",
    "@angularclass/hmr-loader": "^3.0.2",
    "@types/core-js": "0.9.35",
    "@types/jasmine": "2.5.41",
    "@types/lodash": "4.14.52",
    "@types/node": "6.0.63",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "better-npm-run": "0.0.14",
    "bootstrap": "^4.0.0-alpha.4",
    "bootstrap-loader": "^2.0.0-beta.20",
    "bootstrap-sass": "^3.3.7",
    "core-js": "^2.4.1",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.26.1",
    "exports-loader": "^0.6.3",
    "express": "^4.14.1",
    "express-session": "^1.15.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.10.0",
    "font-awesome": "^4.7.0",
    "font-awesome-loader": "^1.0.2",
    "html-webpack-plugin": "^2.8.1",
    "imports-loader": "^0.7.0",
    "jquery": "^3.1.1",
    "json-loader": "^0.5.4",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.2.2",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "^0.1.3",
    "resolve-url-loader": "^1.6.1",
    "rxjs": "5.0.1",
    "sass-loader": "^5.0.1",
    "session-file-store": "^1.0.0",
    "socket.io": "^1.7.2",
    "style-loader": "^0.13.1",
    "ts-loader": "^2.0.0",
    "typescript": "^2.1.5",
    "url-loader": "^0.5.7",
    "webpack-dev-middleware": "^1.9.0",
    "webpack": "^2.2.1",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "jasmine-core": "^2.5.2",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "phantomjs-prebuilt": "^2.1.14",
    "zone.js": "^0.7.6"
  }
}
